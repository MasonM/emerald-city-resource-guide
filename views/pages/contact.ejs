<%- include('../layout/head') %>
</head>
<body>
    <%- include('../layout/header') %>
    <main id="contact-page">
				<div  id="copy-request">
					<p class="contact">To request printed copies of the guide, please fill out the form below.</p>
					<form action="/confirmation" method="POST" class="contact form">
						<label for="organization">Name of Organization</label>
						<input type="text" id="form-organization" name="organization">
						
						<label for="name">Your Name</label>
						<input type="text" id="form-name" name="name">

						<label for="email">Email Address</label>
						<input type="email" id="form-email" name="email">

						<label for="number">Number of Guides Requested</label>
						<input type="number" id="form-number" name="number">

						<label for="date">Desired Pick Up Date</label>
						<input type="date" id="form-date" name="date">

						<button type="submit" id="request-button">Submit</button>

					</form>
				</div>
				<div id="feedback">
					<p class="contact">If you have feedback, questions, or stories you'd like to share about the Emerald City Resource Guide, please fill out the form below.</p>
					<form action="/confirmation" method="POST" class="contact form" id="feedback-form">
						<label for="organization">Name of Organization</label>
						<input type="text" id="form-organization" name="organization">
						
						<label for="name">Your Name</label>
						<input type="text" id="form-name" name="name">

						<label for="email">Email Address</label>
						<input type="email" id="form-email" name="email">

						<label for="feedbackfield">Feedback, questions, or stories</label>
						<textarea form="feedback-form" id="feedbackfield" name="feedbackfield" rows="5" cols="36" wrap="hard"></textarea>

						<button type="submit" id="request-button">Submit</button>

					</form>
				</div>
    </main>
    </div>
    <%- include('../layout/footer') %>
    </div>
</body>
</html>