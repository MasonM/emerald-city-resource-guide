<main>
    <form action="/editconfirmation" method="POST" >
        <h2>Edit Organization</h4>
        <input name="_method" class="hidden" value="PUT">

        <input name="id" class="hidden" value=<%= organization.organization_id %> >
        <fieldset>
            <label >
                <span>Name</span>
                <textarea name="name" type="text" required><%= organization.organization_name %></textarea>
            </label> 
        </fieldset>
        <fieldset>
            <label>
                <span>Website</span>
                <textarea name="website" type="text"> <%= organization.website %> </textarea>
            </label>
        </fieldset>
        <fieldset>
            <label>
                <span>Phone</span>
                <textarea name="phone_number" type="text"><%= organization.phone_number %></textarea>
            </label>
        </fieldset>
        <fieldset>
            <label>
                <span>Address</span>
                <textarea name="org_address" type="text"><%= organization.org_address %></textarea>
            </label>
        </fieldset>
        <fieldset>
            <label>
                <span>Hours</span>
                <textarea name="schedule" type="text"><%= organization.schedule %></textarea>
            </label>
        </fieldset>
        <fieldset>
            <label>
                <span>Description</span>
                <textarea name="org_description" type="text"><%= organization.org_description %></textarea>
            </label>
        </fieldset>
        <fieldset>
            <label>
                <span>Genders Served</span>
                <input name="gender" type="radio" value="men-only"
                <% if (organization.gender === 'men only') { %>
                    checked
                <% } %>
                >Men Only
                <input name="gender" type="radio" value="women-only"
                <% if (organization.gender === 'women only') { %>
                    checked
                <% } %>
                >Women Only
                <input name="gender" type="radio" value="no-restrictions"
                <% if (organization.gender === 'no restrictions') { %>
                    checked
                <% } %>
                >No Restrictions
            </label>
        </fieldset>
        <div id="population">
            <h3>Target Populations </h3>
            <label><input type="checkbox" name="category[0]" value="14" 
                <% if (organization.array_agg.indexOf(14) >= 0){ %>
                    checked
                <% } %>
                >People of Color</label> 
            <label><input type="checkbox" name="category[1]" value="13"
                <% if (organization.array_agg.indexOf(13) >= 0){ %>
                    checked
                <% } %>
                >Native People</label> 
            <label><input type="checkbox" name="category[2]" value="20"
                <% if (organization.array_agg.indexOf(20) >= 0){ %>
                    checked
                <% } %>
                >LGBTQIA+</label> 
            <label><input type="checkbox" name="category[3]" value="29"
                <% if (organization.array_agg.indexOf(29) >= 0){ %>
                    checked
                <% } %>
                >Veterans</label> 
            <label><input type="checkbox" name="category[4]" value="24"
                <% if (organization.array_agg.indexOf(24) >= 0){ %>
                    checked
                <% } %>
                >Senior Citizens</label> 
            <label><input type="checkbox" name="category[5]" value="18"
                <% if (organization.array_agg.indexOf(18) >= 0){ %>
                    checked
                <% } %>
                >Immigrants or Refugees</label> 
            <label><input type="checkbox" name="category[6]" value="27"
                <% if (organization.array_agg.indexOf(27) >= 0){ %>
                    checked
                <% } %>
                >Survivors of Violence</label> 
            </div>
        <div id="services">
            <h3>Services Offered</h3>
            <section id="basic-needs">
                <h4>Basic Needs</h4>
                <label><input type="checkbox" name="category[7]" value="1"
                    <% if (organization.array_agg.indexOf(1) >= 0){ %>
                        checked
                    <% } %>
                    >Emergency and Crisis Lines</label>
                <label><input type="checkbox" name="category[8]" value="3"
                    <% if (organization.array_agg.indexOf(3) >= 0){ %>
                        checked
                    <% } %>
                    >Hygiene Services</label>
                <label><input type="checkbox" name="category[9]" value="4"
                    <% if (organization.array_agg.indexOf(4) >= 0){ %>
                        checked
                    <% } %>
                    >Encampments</label> 
                <label><input type="checkbox" name="category[10]" value="6"
                    <% if (organization.array_agg.indexOf(6) >= 0){ %>
                        checked
                    <% } %>
                    >Day Centers</label> 
                <label><input type="checkbox" name="category[11]" value="12"
                    <% if (organization.array_agg.indexOf(12) >= 0){ %>
                        checked
                    <% } %>
                    >Food Assistance</label> 
                <label><input type="checkbox" name="category[12]" value="17"
                    <% if (organization.array_agg.indexOf(12) >= 0){ %>
                        checked
                    <% } %>
                    >Housing Services</label> 
                <label><input type="checkbox" name="category[13]" value="25"
                    <% if (organization.array_agg.indexOf(25) >= 0){ %>
                        checked
                    <% } %>
                    >Shelters</label> 
                <label><input type="checkbox" name="category[14]" value="5"
                    <% if (organization.array_agg.indexOf(5) >= 0){ %>
                        checked
                    <% } %>
                    >Clothing Services</label> 
            </section>
            <section id="health">
                <h4>Health</h4>
                <label><input type="checkbox" name="category[15]" value="7"
                    <% if (organization.array_agg.indexOf(7) >= 0){ %>
                        checked
                    <% } %>
                    >Dental and Vision Services </label> 
                <label><input type="checkbox" name="category[16]" value="8"
                    <% if (organization.array_agg.indexOf(8) >= 0){ %>
                        checked
                    <% } %>
                    >Drug and Alchohol Services</label> 
                <label><input type="checkbox" name="category[17]" value="10"
                    <% if (organization.array_agg.indexOf(10) >= 0){ %>
                        checked
                    <% } %>
                    >Family and Maternity Services</label> 
                <label><input type="checkbox" name="category[18]" value="15"
                    <% if (organization.array_agg.indexOf(15) >= 0){ %>
                        checked
                    <% } %>
                    >General Health Services</label> 
                <label><input type="checkbox" name="category[19]" value="16"
                    <% if (organization.array_agg.indexOf(19) >= 0){ %>
                        checked
                    <% } %>
                    > HIV/AIDS Services</label> 
                <label><input type="checkbox" name="category[20]" value="22"
                    <% if (organization.array_agg.indexOf(22) >= 0){ %>
                        checked
                    <% } %>
                    >Mental Health Services</label> 
            </section>
            <section id="financial">
                <h4>Financial, Legal, and Employment</h4>
                <label><input type="checkbox" name="category[21]" value="2"
                    <% if (organization.array_agg.indexOf(2) >= 0){ %>
                        checked
                    <% } %>
                    >Identification Services</label> 
                <label><input type="checkbox" name="category[22]" value="9"
                    <% if (organization.array_agg.indexOf(9) >= 0){ %>
                        checked
                    <% } %>
                    >Employment and Training Services</label> 
                <label><input type="checkbox" name="category[23]" value="11"
                    <% if (organization.array_agg.indexOf(11) >= 0){ %>
                        checked
                    <% } %>
                    >Financial Assistance</label> 
                <label><input type="checkbox" name="category[24]" value="19"
                    <% if (organization.array_agg.indexOf(19) >= 0){ %>
                        checked
                    <% } %>
                    >Legal Services</label> 
                <label><input type="checkbox" name="category[25]" value="21"
                    <% if (organization.array_agg.indexOf(21) >= 0){ %>
                        checked
                    <% } %>
                    >Mail Services</label> 
                <label><input type="checkbox" name="category[26]" value="26"
                    <% if (organization.array_agg.indexOf(26) >= 0){ %>
                        checked
                    <% } %>
                    >Storage Services</label> 
                <label><input type="checkbox" name="category[27]" value="23"
                    <% if (organization.array_agg.indexOf(23) >= 0){ %>
                        checked
                    <% } %>
                    >Re-entry Assistance</label> 
                <label><input type="checkbox" name="category[28]" value="28"
                    <% if (organization.array_agg.indexOf(28) >= 0){ %>
                        checked
                    <% } %>
                    >Transportation Services</label> 
            </section>
        </div>
        <input class="hidden" name="timestamp" id="timestamp">
        <button type="submit">Submit</button>
      </form>
</main>
