<%- include('../layout/head') %>
<body>
    <%- include('../layout/header') %>
		<div>
			<p id="instructions">Fill out the form below to receive a custom list of resources in the Seattle area.</p>
		</div>			 
		<form action ="/results" method="POST">
						<div id="about-you">
						  <div class="selectdiv">
                <label for="gender"><h3>What is your gender identity?</h3></label>    
                    <select name="gender" id="gender" required>
                        <option disabled selected value>Select One</option>
                        <option value="no-restrictions">Rather not say</option>
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                        <option value="no-restrictions">Other</option>
										</select>
							</div>
							<div class="selectdiv">
                <label for="kids"><h3>Do you have children in your custody?</h3></label>
                    <select name="kids" id="kids" required>
                        <option disabled selected value>Select One</option>
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
							</div>
                <div id="population">
                    <h3>What groups do you belong to? </h3>
                    <label><input type="checkbox" name="category[0]" value="14">People of Color</label> <br>
                    <label><input type="checkbox" name="category[1]" value="13">Native People</label> <br>
                    <label><input type="checkbox" name="category[2]" value="21">LGBTQIA</label> <br>
                    <label><input type="checkbox" name="category[3]" value="30">Veterans</label> <br>
                    <label><input type="checkbox" name="category[4]" value="25">Senior Citizens</label> <br>
                    <label><input type="checkbox" name="category[5]" value="19">Immigrants or Refugees</label> <br>
                    <label><input type="checkbox" name="category[6]" value="28">Survivors of Violence</label> <br>
                </div>
						</div>  
                <div id="services">
                    <h3>What kinds of resources are you looking for?</h3>
                    <section id="basic-needs">
                        <h4>Basic Needs</h4>
                        <label><input type="checkbox" name="category[7]" value="1">Emergency and Crisis Lines</label> <br>
												<label><input type="checkbox" name="category[8]" value="3">Hygiene Services</label> <br>
												<label><input type="checkbox" name="category[9]" value="4">Encampments</label> <br>
												<label><input type="checkbox" name="category[10]" value="6">Day Centers</label> <br>
												<label><input type="checkbox" name="category[11]" value="12">Food Assistance</label> <br>
												<label><input type="checkbox" name="category[12]" value="17">Housing Services</label> <br>
												<label><input type="checkbox" name="category[13]" value="26">Shelters</label> <br>
												<label><input type="checkbox" name="category[14]" value="5">Clothing Services</label> <br>
                    </section>
                    <section id="health">
                        <h4>Health</h4>
                        <label><input type="checkbox" name="category[15]" value="7">Dental and Vision Services </label> <br>
                        <label><input type="checkbox" name="category[16]" value="8">Drug and Alchohol Services</label> <br>
                        <label><input type="checkbox" name="category[17]" value="10">Family and Maternity Services</label> <br>
                        <label><input type="checkbox" name="category[18]" value="15">General Health Services</label> <br>
                        <label><input type="checkbox" name="category[19]" value="16"> HIV/AIDS Services</label> <br>
                        <label><input type="checkbox" name="category[20]" value="2">Mental Health Services</label> <br>
                    </section>
                    <section id="financial">
                        <h4>Financial, Legal, and Employment</h4>
                        <label><input type="checkbox" name="category[21]" value="2">Identification Services</label> <br>
                        <label><input type="checkbox" name="category[22]" value="9">Employment and Training Services</label> <br>
                        <label><input type="checkbox" name="category[23]" value="11">Financial Assistance</label> <br>
                        <label><input type="checkbox" name="category[24]" value="20">Legal Services</label> <br>
                        <label><input type="checkbox" name="category[25]" value="22">Mail Services</label> <br>
                        <label><input type="checkbox" name="category[26]" value="27">Storage Services</label> <br>
                        <label><input type="checkbox" name="category[27]" value="24">Re-entry Assistance</label> <br>
                        <label><input type="checkbox" name="category[28]" value="29">Transportation Services</label> <br>
                    </section>
                </div>
                
                <button type="submit" id="submit-button">Find Resources</button>
           
            </form>
           
        </div>
    </div>
    <%- include('../layout/footer') %>
    </div>
</body>
</html>